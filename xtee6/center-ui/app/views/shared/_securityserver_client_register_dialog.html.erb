<%= dialog "securityserver_client_register_dialog", t("members.edit.used_servers.add.title") do %>
  <section class="container">
    <legend><%= t 'members.edit.used_servers.add.client.legend' %></legend>
    <table class="details">
      <tr>
        <td></td>
        <td>
          <% if can?(:view_security_server_details) %>
            <button id="securityserver_client_client_search" >
              <%= t 'common.search' %>
            </button>
          <% end %>
        </td>
      </tr>
      <tr>
        <td><%= t 'securityservers.clients.name' %></td>
        <td><input id="securityserver_client_name" type="text"/></td>
      </tr>
      <tr>
        <td><%= t 'securityservers.clients.class' %></td>
        <td><%= select_tag(
            "securityserver_client_class",
            options_for_select(create_member_class_select(get_all_member_classes))) %>
        </td>
      </tr>
      <tr>
        <td><%= t 'securityservers.clients.code' %></td>
        <td><input id="securityserver_client_code" type="text"/></td>
      </tr>
      <tr>
        <td><%= t 'securityservers.clients.subsystem' %></td>
        <td><input id="securityserver_client_subsystem_code" type="text"/></td>
      </tr>
    </table>
  </section>
  <section class="container">
    <legend><%= t 'securityservers.info.legend' %></legend>
    <table class="details">
      <tr>
        <td><%= t 'securityservers.owner_name' %></td>
        <td><input id="securityserver_client_owner_name" type="text" readonly/></td>
      </tr>
      <tr>
        <td><%= t 'securityservers.owner_class' %></td>
        <td><input id="securityserver_client_owner_class" type="text"/></td>
      </tr>
      <tr>
        <td><%= t 'securityservers.owner_code' %></td>
        <td><input id="securityserver_client_owner_code" type="text" readonly/></td>
      </tr>
      <tr>
        <td><%= t 'securityservers.server_code' %></td>
        <td><input id="securityserver_client_server_code" type="text" readonly/></td>
      </tr>
    </table>
  </section>
  <%= render :partial => "shared/securityserver_search_dialog" %>

  <div class="dialog_dynamic">
    <%= render :partial => "shared/securityserver_client_search_dialog" %>
  </div>
<% end %>
