<!-- Title will be added dynamically witn JavaScript -->
<%= dialog "group_members_add_dialog", "" do %>
  <fieldset id="group_addable_members_advanced_search_fieldset">
    <table>
      <legend><%= t 'common.advanced_search' %></legend>
      <tr>
        <td><%= t 'groups.details.name' %></td>
        <td><%= text_field_tag "group_addable_members_advanced_search_name" %></td>
      </tr>
      <tr>
        <td><%= t 'groups.details.code' %></td>
        <td><%= text_field_tag "group_addable_members_advanced_search_code" %></td>
      </tr>
      <tr>
        <td><%= t 'groups.details.class' %></td>
        <td><%= text_field_tag "group_addable_members_advanced_search_class" %></td>
      </tr>
      <tr>
        <td><%= t 'groups.details.subsystem' %></td>
        <td><%= text_field_tag "group_addable_members_advanced_search_subsystem" %></td>
      </tr>
      <tr>
        <td><%= t 'groups.details.sdsb' %></td>
        <td><%= select_tag(
            "group_addable_members_advanced_search_sdsb",
            options_for_select([""]),
                :class => "detail_input") %>
        </td>
      </tr>
      <tr>
        <td><%= t 'groups.details.type' %></td>
        <td><%= select_tag(
            "group_addable_members_advanced_search_type",
            options_for_select([""]),
                :class => "detail_input") %>
        </td>
      </tr>
      <tr>
        <td colspan="2">
          <% if can?(:add_and_remove_group_members) %>
            <button id="group_addable_members_advanced_search_execute"><%= t 'common.search' %></button>
            <button id="group_addable_members_advanced_search_clear"><%= t 'common.clear' %></button>
          <% end %>
        </td>
      </tr>
    </table>
  </fieldset>

  <table id="group_addable_members" class="display">
    <thead>
      <tr>
        <th><%= t 'groups.details.name' %></th>
        <th><%= t 'groups.details.code' %></th>
        <th><%= t 'groups.details.class' %></th>
        <th><%= t 'groups.details.subsystem' %></th>
        <th><%= t 'groups.details.sdsb' %></th>
        <th><%= t 'groups.details.type' %></th>
      </tr>
    </thead>
  </table>
<% end %>