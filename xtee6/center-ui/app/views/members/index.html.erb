<% content_for :head do %>
  <%= javascript_include_tag "centerui_common" %>
  <%= javascript_include_tag "members" %>
  <%= javascript_include_tag "member_details" %>
  <%= javascript_include_tag "securityserver_details" %>
  <%= javascript_include_tag "request_details" %>
  <%= javascript_include_tag "group_details" %>
<% end %>

<% content_for :content do %>
  <div class="fill">
    <div class="members_actions">
      <% if can?(:add_new_member) %>
        <button id="member_add"><%= t 'common.add' %></button>
      <% end %>
      <% if can?(:view_member_details) %>
        <button id="member_details" class="member-action"><%= t 'common.details' %></button>
      <% end %>
    </div>

    <table id="members" class="display">
      <thead>
        <tr>
          <th id="member_name"><%= t 'members.name' %></th>
          <th id="member_class"><%= t 'members.class' %></th>
          <th id="member_code"><%= t 'members.code' %></th>
        </tr>
      </thead>
    </table>

  </div>

  <%= render :partial => "shared/member_add_dialog" %>
  <%= render :partial => "shared/member_edit_dialog",
    locals: {from_main_menu: true} %>

  <div class="dialog_dynamic">
    <%= render :partial => "shared/group_details_dialog" %>
  </div>
<% end %>