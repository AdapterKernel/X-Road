<% content_for :head do %>
  <%= javascript_include_tag "cas" %>
  <%= javascript_include_tag "ca_cache" %>
  <%= javascript_include_tag "ca_common" %>
  <%= javascript_include_tag "ca_new" %>
  <%= javascript_include_tag "ca_edit" %>
  <%= javascript_include_tag "certs_uploader" %>
  <%= javascript_include_tag "centerui_common" %>
<% end %>

<% content_for :content do %>
  <div class="approved_cas_actions">
    <% if can?(:view_approved_ca_details) %>
      <button id="ca_details" class="approved_ca-action"><%= t 'common.edit' %></button>
    <% end %>
    <% if can?(:add_approved_ca) %>
      <button id="ca_add"><%= t 'common.add' %></button>
    <% end %>
    <% if can?(:delete_approved_ca) %>
      <button id="ca_delete" class="approved_ca-action"><%= t 'common.delete' %></button>
    <% end %>
  </div>

  <table id="cas" class="display">
    <thead>
      <tr>
        <th id="approved_ca_trusted_cert_service"><%= t 'approved_cas.trusted_certification_service' %></th>
        <th id="approved_ca_valid_from"><%= t 'common.valid_from' %></th>
        <th id="approved_ca_valid_to"><%= t 'common.valid_to' %></th>
      </tr>
    </thead>
  </table>

  <div class="dialog_dynamic">
    <%= render :partial => "add_ca_step1_upload_top_ca_cert_dialog" %>
    <%= render :partial => "add_ca_step2_view_top_ca_cert_dialog" %>
    <%= render :partial => "add_ca_step3_add_name_extractor_dialog" %>
    <%= render :partial => "add_ca_step4_add_top_ca_ocsp_responders" %>
    <%= render :partial => "add_ca_step5_add_intermediate_cas" %>
    <%= render :partial => "intermediate_ca_edit_dialog" %>
  </div>
<% end %>
