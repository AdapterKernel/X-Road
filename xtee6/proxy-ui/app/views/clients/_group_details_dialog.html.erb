<%= dialog "group_details_dialog" do %>
  <section class="container">
    <legend><%= t 'common.description' %></legend>

    <table class="details">
      <tr>
        <td></td>
        <td style="width: 100%">
          <p id="group_details_description" class="input" ></p>
        </td>
        <td>
          <% if can?(:edit_local_group_desc) %>
            <button id="edit"><%= t 'common.edit' %></button>
          <% end %>
        </td>
      </tr>
    </table>
  </section>

  <section class="container">
    <legend>
      <%= t '.group_members' %> (<span id="group_details_member_count"></span>)
    </legend>

    <%= render_advanced_search "group_members_search", "group_members" %>

    <table id="group_members">
      <thead>
        <tr>
          <th><%= t '.name' %></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th></th>
          <th><%= t 'common.id' %></th>
          <th><%= t '.added' %></th>
        </tr>
      </thead>
    </table>
  </section>
<% end %>

<%= dialog "group_description_edit_dialog", t('.edit_title') do %>
  <textarea id="group_description_edit"></textarea>
<% end %>

<%= render :partial => "group_members_add_dialog" %>
