<% content_for :head do %>
  <% javascript_tag do %>
    $(document).ready(function() {
      <% if flash[:error] %>
        if (top.location != self.location) {
          // In case we find ourselves in an iframe
          top.window.error("<%= flash[:error].join('<br/>') %>");
        } else {
          $("#error").show();
        }
      <% end %>
      <% if flash[:notice] %>
        if (top.location != self.location) {
          // In case we find ourselves in an iframe
          top.window.notice("<%= flash[:notice].join('<br/>') %>");
        } else {
          $("#notice").show();
        }
      <% end %>
      <% if flash[:nb] %>
        if (top.location != self.location) {
          // In case we find ourselves in an iframe
          top.window.nb("<%= flash[:nb].join('<br/>') %>");
        } else {
          $("#nb").show();
        }
      <% end %>
    });
  <% end %>
<% end %>
