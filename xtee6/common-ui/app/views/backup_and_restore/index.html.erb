<% content_for :head do %>
  <%= javascript_include_tag "backup_and_restore" %>
<% end %>

<% content_for :content do %>
  <% if can?(:backup_configuration) %>
    <div class="backup_and_restore_actions">
      <button id="backup"><%= t 'backup.index.backup' %></button>
      <button id="backup_upload"><%= t 'backup.index.upload' %></button>
    </div>
 
    <div class="fill" id="backup-holder">
      <fieldset>
        <table id="backup_files"></table>

        <div class="dialog_dynamic">
          <%= render :partial => "backup_file_upload_dialog" %>
          <%= render :partial => "application/console_output_dialog" %>
        </div>
      </fieldset>
    </div>
  <% end %>
<% end %>
