# 
#

description     "X-Road Jetty server"

start on runlevel [2345]
stop on runlevel [!2345]

respawn
respawn limit 5 10
umask 007

setuid sdsb
setgid sdsb
console log
chdir /usr/share/sdsb/jetty9


pre-start script
    mkdir -p -m0755 /var/run/sdsb
end script

script
  set -x
  . /etc/sdsb/services/jetty.conf
  exec ${JAVA_HOME}/bin/java ${JETTY_PARAMS} ${SDSB_PARAMS} -cp ${CP}${ADDON_CP} ${ADDON_PARAMS} org.eclipse.jetty.start.Main jetty.home=/usr/share/sdsb/jetty9
end script

