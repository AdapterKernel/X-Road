<% content_for :simple_search do %>
  <%= text_field_tag "subject_search_all", nil, :id => nil %>
<% end %>

<% content_for :advanced_search do %>
  <tr>
    <td class="label"><%= t 'clients.service_acl_dialog.member_name_group_desc' %></td>
    <td><%= text_field_tag "subject_search_description" %></td>
  </tr>
  <tr>
    <td><%= t 'clients.service_acl_dialog.type' %></td>
    <td>
      <%= select_tag "subject_search_type",
          options_for_select(@subject_types), :id => nil, :include_blank => true %>
    </td>
  </tr>
  <tr>
    <td><%= t 'clients.service_acl_dialog.instance' %></td>
    <td>
      <%= select_tag "subject_search_instance",
          options_for_select(@instances), :id => nil, :include_blank => true %>
    </td>
  </tr>
  <tr>
    <td><%= t 'clients.service_acl_dialog.member_class' %></td>
    <td><%= select_tag "subject_search_class",
            options_for_select(@member_classes), :id => nil, :include_blank => true %></td>
  </tr>
  <tr>
    <td><%= t 'clients.service_acl_dialog.member_group_code' %></td>
    <td><%= text_field_tag "subject_search_code", nil, :id => nil %></td>
  </tr>
  <tr>
    <td><%= t 'clients.service_acl_dialog.subsystem_code' %></td>
    <td><%= text_field_tag "subject_search_subsystem_code", nil, :id => nil %></td>
  </tr>
<% end %>
