<% content_for :head do %>
  <%= javascript_include_tag "centerui_common" %>
  <%= javascript_include_tag "url_and_cert_dialog" %>
  <%= javascript_include_tag "tsps" %>
<% end %>

<% content_for :content do %>
  <div class="tsps_actions">
    <% if can?(:view_approved_tsa_details) %>
      <button id="tsp_details" class="tsp-action"><%= t 'common.edit' %></button>
    <% end %>
    <% if can?(:add_approved_tsa) %>
      <button id="tsp_add"><%= t 'common.add' %></button>
    <% end %>
    <% if can?(:delete_approved_tsa) %>
      <button id="tsp_delete" class="tsp-action"><%= t 'common.delete' %></button>
    <% end %>
  </div>

  <table id="tsps">
    <thead>
      <tr>
        <th id="tsp_name"><%= t 'common.name' %></th>
        <th id="tsp_valid_from"><%= t 'common.valid_from' %></th>
        <th id="tsp_valid_to"><%= t 'common.valid_to' %></th>
      </tr>
    </thead>
  </table>

  <%= render :partial => "shared/cert_details_dialog" %>
  <%= url_and_cert_dialog("tsp") %>
<% end %>
