<?xml version="1.0" encoding="UTF-8" ?>
<configuration>

    <define name="logOutputPath" class="ee.cyber.xroad.mediator.util.LogOutputPathPropertyDefiner" />
    <define name="xroadLogLevel" class="ee.cyber.xroad.mediator.util.LogLevelPropertyDefiner" />
    <define name="xtee55LogLevel" class="ee.cyber.xroad.mediator.util.LogLevelPropertyDefiner" />

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${logOutputPath}/xtee55_clients_importer.log</file>
        <!-- NB! Use ee.ria.xroad.common.XRoadSizeBasedRollingPolicy rolling -->
        <!-- policy instead of ch.qos.logback.core.rolling.TimeBasedRollingPolicy -->
        <!-- as a workaround for Logback bug http://jira.qos.ch/browse/LOGBACK-992 -->
        <rollingPolicy class="ee.ria.xroad.common.XRoadSizeBasedRollingPolicy">
            <fileNamePattern>${logOutputPath}/xtee55_clients_importer.%i.log.zip</fileNamePattern>
        </rollingPolicy>
        <triggeringPolicy class="ch.qos.logback.core.rolling.SizeBasedTriggeringPolicy">
            <maxFileSize>100MB</maxFileSize>
        </triggeringPolicy>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
            <charset>UTF-8</charset>
        </encoder>
    </appender>

    <logger name="ee.ria.xroad" level="${xroadLogLevel}"/>
    <logger name="ee.cyber.xroad" level="${xtee55LogLevel}" />

    <root level="INFO">
        <appender-ref ref="STDOUT" />
        <appender-ref ref="FILE" />
    </root>
</configuration>
