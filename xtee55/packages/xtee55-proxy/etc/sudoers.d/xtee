
User_Alias	IMPORTERS = xroad,ui

Cmnd_Alias	SSLKEY = /usr/share/xroad/scripts/import_internal_sslkey.sh -export

# enable exporter run as ui user
IMPORTERS  ALL=(ui) NOPASSWD: /usr/share/xroad/scripts/serviceimporter.sh

#exporter should trigger reload of producer_proxy conf
IMPORTERS  ALL=(ui) NOPASSWD: /usr/share/xroad/scripts/reload_producer_proxy.sh

#need to restart nginx
IMPORTERS ALL=(root) NOPASSWD: /etc/init.d/nginx reload

#export sslkey to 5.0
xroad	ALL=(ui) NOPASSWD: SSLKEY

# Reload servicemediator
xroad	ALL=(root) NOPASSWD: /sbin/restart xtee55-servicemediator
